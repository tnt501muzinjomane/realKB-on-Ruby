<h1>Available problems</h1>
<table>
  <thead>
    <tr> 
<%= form_tag problems_path, :method => 'get', :id => "problems_search" do %>
    <%= text_field_tag :search, params[:search], :placeholder => "search" %><br>
    <%= submit_tag "Search related problems", :name => nil, class:'btn btn-success' %>
<% end %>
    </tr>
    <tr>
    <div class="foobar" style="background-color:#F2F2F2;"  %>
<% if @problem %>
 <h5>(<%= @problem.count %>) Problems Found</h5>
<% end %>
</div>
    </tr>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Tag</th>
       <th>Follow_the_links_below</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @problem.each do |problem| %>
      <tr>
        <td><%= problem.title %></td>
        <td><%= problem.description %></td>
        <td><%= problem.tag %></td>
        <td><%= link_to 'Click here to feed solutions', :controller => 'solutions', :action => 'new', :problem_id => problem.id %></td>
        <td><%= link_to 'Show', problem, class:'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_problem_path(problem), class:'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', problem, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
